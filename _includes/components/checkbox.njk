{% macro checkboxField(labelText, id, isChecked = false) %}
    <label class="relative flex items-center rounded-full cursor-pointer" for="{{ id }}">
        <input type="checkbox" id="{{ id }}" 
               class="before:content[''] peer relative w-5 h-5 cursor-pointer appearance-none rounded-md border border-zinc-300 hover:border-zinc-500 transition-all checked:border-indigo-700 hover:checked:border-transparent checked:bg-indigo-700 shrink-0"
               {% if isChecked %} checked {% endif %} />
        <span class="absolute text-white transition-opacity opacity-0 pointer-events-none top-2/4 left-2/4 -translate-y-2/4 -translate-x-2/4 peer-checked:opacity-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor" stroke="currentColor" stroke-width="1">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
        </span>
    </label>

    <label for="{{ id }}" class="ms-2 text-sm font-medium">{{ labelText }}</label>
{% endmacro %}
